  <div class="modal fade" id="updateProfile" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Update Profile</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/updateinstructorprofile" method="post">
            <label for="newInstructorUsername" class="form-label">Username</label>
            <input type="text" name="newInstructorUsername" class="form-control" id="newInstructorUsername" value="<%= theInstructor.username %>">
            <label for="newInstructorFirst" class="form-label">First Name</label>
            <input type="text" name="newInstructorFirst" class="form-control" id="newInstructorFirst" value="<%= theInstructor.first %>">
            <label for="newInstructorLast" class="form-label">Last Name</label>
            <input type="text" name="newInstructorLast" class="form-control" id="newInstructorLast" value="<%= theInstructor.last %>">
            <label for="newInstructorDOB" class="form-label">DOB</label>
            <input type="text" name="newInstructorDOB" class="form-control" id="newInstructorDOB" value="<%= theInstructor.dob.slice(0, 10) %> ">
            <label for="newInstructorBelt" class="form-label">Belt Color</label>
            <select class="form-select" name="newInstructorBelt" aria-label="Default select example" id="newInstructorBelt">
                <option selected value="<%= theInstructor.belt %>"><%= theInstructor.belt.charAt(0).toUpperCase() + theInstructor.belt.slice(1) %></option>
                <% if (theInstructor.belt != "white") { %>
                  <option value="white">White</option>
                <% } %>
                <% if (theInstructor.belt != "blue") { %>
                  <option value="blue">Blue</option>
                <% } %>
                <% if (theInstructor.belt != "purple") { %>
                  <option value="purple">Purple</option> 
                <% } %>
                <% if (theInstructor.belt != "brown") { %>
                  <option value="brown">Brown</option>
                <% } %>
                <% if (theInstructor.belt != "black") { %>
                  <option value="black">Black</option>
                <% } %>
              </select>
            <label for="newInstructorYears" class="form-label">Number of years training</label>
            <select class="form-select" name="newInstructorYears" aria-label="Default select example" id="newInstructorYears">
                <option selected value="<%= theInstructor.years %> "><%= theInstructor.years %> </option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="10">10+</option>
              </select>
              <div class="mb-3">
                <label for="newInstructorAbout" class="form-label">What is your motto?</label>
                <textarea class="form-control" name="newInstructorAbout" id="newInstructorAbout" rows="3"><%= theInstructor.about %></textarea>
              </div>  
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Exit</button>
              <button type="submit" class="btn btn-primary">Update Profile</button>
            </div>         
          </form>
        </div>
