  <main class="my-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <!-- <div class="container-fluid" style="width: 23rem; background-color: #b8c1c6; border-radius: 20px; padding: 10px; margin-top: 20px;"> -->

            <div class="card-body" style="background-color: rgba(0, 0, 0, 0.639); border-radius: 20px; padding: 10px; color: white;">
              <h2 class="card-text" style="font-size: 40px; text-align:center; margin-bottom:12px;"><%= theStudent.first %> <%= theStudent.last %>  </h2>
              <p class="card-text" style="font-size: 30px; display: flex; align-items:flex-end;"><img src="/images/iconStar.png" alt="star" style="width: 60px; margin-right: 20px;">  I have <%= theStudent.stars %> stars!</p>
              <p class="card-text" style="font-size: 30px;"><img src="/images/iconBelt.png" alt="belt" style="width: 60px; margin-right: 20px;"><%= theStudent.belt.charAt(0).toUpperCase() + theStudent.belt.slice(1) %></p>
              <% if (theStudent.purpose != "hobbyist") { %>
                <p class="card-text" style="font-size: 30px; display: flex; align-items:flex-end;"><img src="/images/iconStrong.png" alt="barbell" style="width: 60px; margin-right: 20px;">  I am a <%= theStudent.purpose %></p>
              <% } else { %>
                <p class="card-text" style="font-size: 30px; display: flex; align-items:flex-end;"><img src="/images/iconSurf.png" alt="surf" style="width: 60px; margin-right: 20px;">  I am a <%= theStudent.purpose %></p>
                <% } %>
              <% if (theStudent.years != 1) { %>
                <p class="card-text" style="font-size: 30px; display: flex; align-items:flex-end;"><img src="/images/iconCalender.png" alt="years" style="width: 60px; margin-right: 20px;">  I've trained for <%= theStudent.years %> years</p>
                <% } else { %>
                  <p class="card-text" style="font-size: 30px; display: flex; align-items:flex-end;"><img src="/images/iconCalender.png" alt="years" style="width: 60px; margin-right: 20px;">  I've trained for <%= theStudent.years %> year</p>
               <% } %>
              <!-- <p class="card-text" style="font-size: 20px;">My motto:</p> -->
              <p class="card-text" style="font-size: 30px; display: flex; align-items:flex-end;"><img src="/images/iconQuote.png" alt="surf" style="width: 60px; margin-right: 20px;"> "<%= theStudent.about %>"</p>
            </div>
        </div>
        <div class="col-md-6">
          <h2 style="text-align:center; font-weight: 600; margin-top: 20px; color: white;">My Skills</h2>
          <div class="skills">
            <% for (let theOtherSkill of theOtherSkills) {%>
              <div class="container-fluid" style="width: 400px; background-color: #0000009b; border-radius: 20px; padding: 10px; margin-top: 20px; color:white;">
                <div class="card-body">
                  <h5 class="card-title"><%= theOtherSkill.category  %> </h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= theOtherSkill.name %> </h6>
                  <p class="card-text"><%= theOtherSkill.comment %> </p>
                  <p class="card-text"><%= theOtherSkill.learnedfrom %> taught me this.</p>
                  <a href="<%= theOtherSkill.youtube %> " class="card-link">YouTube</a>
                </div>
              </div>
                <% } %>
          </div>
        </div>
      </div>
    </div>


<!--------------------------------- Modal ------------------------------->
 <div class="modal fade" id="addSkill" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">New Skill</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/addskillstudent" method="post">
          <label for="category" class="form-label">Category</label>
          <input type="text" name="skillCategory" class="form-control" id="category" placeholder="Mount, De La Riva, Closed Guard...">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="skillName" class="form-control" id="name" placeholder="Armbar from Mount">
          <div class="mb-3">
              <label for="comment" class="form-label">Comments</label>
              <textarea class="form-control" name="skillComment" id="comment" rows="3" placeholder="Things I need to remember about this move."></textarea>
          </div>
          <label for="youtube" class="form-label">youTube Link</label>
          <input type="text" name="skillYoutube" class="form-control" id="youtube" placeholder="Video of you performing the move.">                     
          <label for="learnedfrom" class="form-label">Teacher</label>
          <input type="text" name="skillLearnedFrom" class="form-control" id="learnedfrom" placeholder="Who taught you the move?">   
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Exit</button>
            <button type="submit" class="btn btn-dark">Add Skill</button>
          </div>         
        </form>
      </div>
    </div>
  </div>
 </div>

 <div class="modal fade" id="updateProfile" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Update Profile</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/updatestudentprofile" method="post">
          <label for="newStudentUsername" class="form-label">Username</label>
          <input type="text" name="newStudentUsername" class="form-control" id="newStudentUsername" value="<%= theStudent.username %>">
          <label for="newStudentFirst" class="form-label">First Name</label>
          <input type="text" name="newStudentFirst" class="form-control" id="newStudentFirst" value="<%= theStudent.first %>">
          <label for="newStudentLast" class="form-label">Last Name</label>
          <input type="text" name="newStudentLast" class="form-control" id="newStudentLast" value="<%= theStudent.last %>">
          <label for="newStudentDOB" class="form-label">DOB</label>
          <input type="text" name="newStudentDOB" class="form-control" id="newStudentDOB" value="<%= theStudent.dob.slice(0, 10) %> ">
          <label for="newStudentPurpose" class="form-label">Purpose</label> 
          <select class="form-select" name="newStudentPurpose" aria-label="Default select example" id="newStudentPurpose">
              <option selected value="<%= theStudent.purpose %> "><%= theStudent.purpose.charAt(0).toUpperCase() + theStudent.purpose.slice(1) %></option>
              <% if (theStudent.purpose != "hobbyist") { %>
                <option value="hobbyist">Hobbyist</option>
              <% } %>
              <% if (theStudent.purpose != "competitor") { %>
                <option value="competitor">Competitor</option>
              <% } %>
            </select>
          <label for="newStudentBelt" class="form-label">Belt Color</label>
          <select class="form-select" name="newStudentBelt" aria-label="Default select example" id="newStudentBelt">
            <option selected value="<%= theStudent.belt %>"><%= theStudent.belt.charAt(0).toUpperCase() + theStudent.belt.slice(1) %></option>
            <% if (theStudent.belt != "white") { %>
              <option value="white">White</option>
            <% } %>
            <% if (theStudent.belt != "blue") { %>
              <option value="blue">Blue</option>
            <% } %>
            <% if (theStudent.belt != "purple") { %>
              <option value="purple">Purple</option> 
            <% } %>
            <% if (theStudent.belt != "brown") { %>
              <option value="brown">Brown</option>
            <% } %>
            <% if (theStudent.belt != "black") { %>
              <option value="black">Black</option>
            <% } %>
          </select>
          <label for="newStudentYears" class="form-label">Number of years training</label>
          <select class="form-select" name="newStudentYears" aria-label="Default select example" id="newStudentYears">
              <option selected value="<%= theStudent.years %> "><%= theStudent.years %> </option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10">10</option>
              <option value="10">10+</option>
            </select>
            <div class="mb-3">
              <label for="newStudentAbout" class="form-label">Write a quick blurb about yourself</label>
              <textarea class="form-control" name="newStudentAbout" id="newStudentAbout" rows="3"> <%= theStudent.about %> </textarea>
            </div>  
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Exit</button>
            <button type="submit" class="btn btn-dark">Update Profile</button>
          </div>         
        </form>
      </div>
    </div>
  </div>
 </div>
